{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2016", "dom"],
    "noImplicitAny": true,
    "outDir": "./dist",
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "./node_modules/*",
    "./dist/*",
    "./src/*.spec.ts"
  ]
}
